<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="megabizz.school.megabizzschoolapp.TeachersDashboard"
    android:weightSum="4"
    android:baselineAligned="false"
    android:clickable="false"
    android:background="@android:color/transparent">



            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Gallery"
                android:layout_marginTop="15dp"
                android:onClick="goToGallery"
                android:layout_weight="1"
                android:id="@+id/button11"
                android:textSize="25dp"
                android:padding="10dp"


                android:layout_centerHorizontal="true"
                android:background="@drawable/boundary"
                android:textColor="#4169e1"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="News"
                android:onClick="goToNews"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:id="@+id/button12"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:padding="10dp"

                android:background="@drawable/boundary"
                android:textColor="#4169e1"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Events"
                android:layout_weight="1"
                android:onClick="goToEvents"
                android:layout_marginTop="15dp"
                android:id="@+id/button13"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"

                android:background="@drawable/boundary"
                android:textColor="#4169e1"
                android:padding="10dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:text="Upload Notice"
                android:onClick="goToUpload"
                android:id="@+id/button14"
                android:textSize="25dp"
                android:padding="10dp"

                android:background="@drawable/boundary"
                android:textColor="#4169e1"
                android:textStyle="bold" />





</LinearLayout>
